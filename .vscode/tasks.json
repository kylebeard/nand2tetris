{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "git add",
         "type": "shell",
         "command": "git add ${workspaceFolder}"
      },
      {
         "label": "git commit",
         "type": "shell",
         "command": "git",
         "args": ["commit", "-m", "\"${input:commitMessage}\""]
      },
      {
         "label": "git push",
         "type": "shell",
         "command": "git push"
      },
      {
         "label": "Commit and Push All",
         "dependsOrder": "sequence",
         "dependsOn": ["git add", "git commit", "git push"],
         "group": "build"
      },
      {
         "label": "Run test.sh",
         "type": "process",
         "command": "./test.sh",
         "echoCommand": true,
         "options": {
            "cwd": "Compiler"
         },
         "group": "build"
      }
   ],
   "inputs": [
      {
         "id": "commitMessage",
         "type": "promptString",
         "description": "Enter a Commit Message"
      }
   ]
}
